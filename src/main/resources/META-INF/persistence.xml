<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">

    <persistence-unit name="crypto_trading_game">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <class>cryptogame.model.database.jpa.entities.User</class>

        <properties>
            <property name="dialect" value="org.hibernate.dialect.H2Dialect" />
            <property name="javax.persistence.jdbc.driver" value="org.h2.Driver" />
            <property name="javax.persistence.jdbc.url" value="jdbc:h2:./crypto_game.h2.db" />
            <property name="javax.persistence.jdbc.user" value="" />
            <property name="javax.persistence.jdbc.password" value="" />
            <property name="hibernate.show_sql" value="false" />
            <property name="hibernate.format_sql" value="false" />
            <property name="hibernate.connection.charSet" value="UTF-8" />
            <property name="hibernate.hbm2ddl.auto" value="update" />
            <property name="hibernate.connection.url"
                      value="jdbc:h2:./crypto_game;MV_STORE=true"/>
            <property name="hibernate.connection.driver_class" value="org.h2.Driver"/>
        </properties>
    </persistence-unit>
</persistence>